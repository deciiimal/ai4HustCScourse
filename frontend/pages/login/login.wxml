<view class="v1" style="height:{{clientHeight?clientHeight+'px':'auto'}}">
 
 <!-- v2父容器  子view使用绝对布局 -->
   <view class="v2">
     <view class="dltext" style="width: 232rpx; height: 92rpx; display: block; box-sizing: border-box; left: 200rpx; top: -27rpx; position: absolute">登录</view>
     <!-- 手机号 -->
     <!-- 账号输入框 -->
    <view class="phoneCs">
      <image src="../../images/account.png" class="ph"></image>
      <input placeholder="请输入账号" type="text" bindinput="content" value="{{username}}" />
    </view>

    <!-- 密码输入框 -->
    <view class="passwordCs">
      <image src="../../images/password.png" class="ps"></image>
      <input placeholder="请输入密码" type="password" bindinput="password" value="{{password}}" />
    </view>

     <!-- 登录按钮 -->
     <view class="denglu">
       <button class="btn-dl" type="primary" bindtap="goadmin">登录</button>
       <view class="register" bindtap="register">去注册</view>
     </view>
   </view>
 </view>
  

  
