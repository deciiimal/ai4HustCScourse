.container{
  height: 1500rpx;
}
.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0;
}
.table {
  display: block; /* 或者使用flex布局 */
  margin: 0, 15rpx;
}

.row {
  display: flex; /* 使用flex布局 */
}

.cell {
  flex: 1; /* 使每个单元格平均分配空间 */
  border: 1px solid #ccc; /* 设置边框 */
  padding: 10px; /* 设置内边距 */
  text-align: center; /* 文本居中 */
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
  padding-bottom:80rpx;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.message-assistant {
  flex-direction: row;
}

.message-user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.message-content {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
}

.message-user .message-content {
  background-color: #95ec69;
}

.message-assistant .message-content {
  background-color: #ffffff;
}

.input-area {
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  border-radius: 3px;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}

.message-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 10rpx;
  margin: 0;
  padding: 0;

}

/* 显示评论框的样式 */
.comment-box {
  margin: 25rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx; /* 圆角边框 */
  border: 1rpx solid #e0e0e0; /* 边框颜色 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 柔和的阴影效果 */
}

.comment-box .title {
  font-weight: bold;
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 10rpx; /* 标题下方间隔 */
}

.comment-box .star-rating {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.comment-box .star-rating text {
  font-size: 28rpx;
  color: #ff9900; /* 星级颜色 */
  margin-left: 8rpx;
}

.comment-box .content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5; /* 增加行高，文本更易读 */
  background-color: #f7f7f7; /* 评价内容的背景色 */
  padding: 15rpx;
  border-radius: 8rpx; /* 内部内容区域的圆角 */
}
