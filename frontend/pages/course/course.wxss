.container{
  height: 1500rpx;
}
.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0;
}
.table {
  display: block; /* 或者使用flex布局 */
  margin: 0, 15rpx;
}

.row {
  display: flex; /* 使用flex布局 */
}

.cell {
  flex: 1; /* 使每个单元格平均分配空间 */
  border: 1px solid #ccc; /* 设置边框 */
  padding: 10px; /* 设置内边距 */
  text-align: center; /* 文本居中 */
}